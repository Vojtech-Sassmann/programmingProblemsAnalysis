def nejdelsi_slovo(text):  
    max       = 0
    nejdelsi  = ""
    slova = text.split(" ")
    slova.sort()
    for i in slova:
        if (len(i) > max):
            max = len(i)
            nejdelsi = i  
    return nejdelsi 
